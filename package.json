{
  "name": "@pooky-labs/smart-contracts",
  "version": "0.9.0",
  "description": "Pooky smart contracts running on the Polygon blockchain",
  "keywords": [
    "pooky",
    "game",
    "prediction",
    "balls",
    "nft",
    "erc721"
  ],
  "homepage": "https://github.com/pooky-labs/smart-contracts#readme",
  "bugs": "https://github.com/pooky-labs/smart-contracts/issues",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf coverage coverage.json typechain-types",
    "format": "prettier --write '{**/*,*}.{js,ts,jsx,tsx,sol,json,yml,yaml,md}'",
    "compile": "hardhat compile",
    "node": "hardhat node",
    "node:fork": "hardhat node --fork https://polygon-rpc.com/",
    "dev": "hardhat run ./scripts/dev.ts",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "solhint": "solhint 'contracts/**/*.sol'",
    "eslint": "eslint '**/*.{js,ts}'"
  },
  "repository": "github:pooky-labs/smart-contracts",
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@evilmartians/lefthook": "^1.3.12",
    "@faker-js/faker": "^7.6.0",
    "@nomicfoundation/hardhat-chai-matchers": "2.0.0-beta.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomiclabs/hardhat-ethers": "3.0.0-beta.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.8.3",
    "@pooky-labs/prettier-config": "github:pooky-labs/prettier-config",
    "@solidstate/hardhat-bytecode-exporter": "^1.1.1",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@typechain/ethers-v6": "^0.3.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.5",
    "@types/lodash": "^4.14.194",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "chai": "^4.3.7",
    "depcheck": "^1.4.3",
    "dotenv": "^16.0.3",
    "erc721a": "^4.2.3",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^6.3.0",
    "hardhat": "^2.14.0",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-ignore-warnings": "^0.2.8",
    "lodash": "^4.17.21",
    "operator-filter-registry": "^1.4.1",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "rimraf": "^5.0.0",
    "solady": "^0.0.90",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "tslog": "^4.8.2",
    "typechain": "^8.1.1",
    "typescript": "^5.0.4"
  },
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@ethersproject/bytes",
        "@vue/compiler-sfc"
      ],
      "allowedVersions": {
        "ethers": "ethers@6"
      }
    }
  }
}
