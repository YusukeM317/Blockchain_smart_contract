{
  "name": "@pooky-labs/smart-contracts",
  "version": "0.9.0",
  "description": "Pooky smart contracts running on the Polygon blockchain",
  "keywords": [
    "pooky",
    "game",
    "prediction",
    "balls",
    "nft",
    "erc721"
  ],
  "homepage": "https://github.com/pooky-labs/smart-contracts#readme",
  "bugs": "https://github.com/pooky-labs/smart-contracts/issues",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf coverage coverage.json typechain-types",
    "format": "prettier --write '{**/*,*}.{js,ts,jsx,tsx,sol,json,yml,yaml,md}'",
    "compile": "hardhat compile",
    "node": "hardhat node",
    "dev": "hardhat run ./scripts/dev.ts",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "solhint": "solhint 'contracts/**/*.sol'",
    "eslint": "eslint '**/*.{js,ts}'"
  },
  "repository": "github:pooky-labs/smart-contracts",
  "dependencies": {
    "@chainlink/contracts": "^0.6.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@evilmartians/lefthook": "^1.2.7",
    "@faker-js/faker": "^7.6.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@openzeppelin/contracts": "^4.8.1",
    "@pooky-labs/prettier-config": "github:pooky-labs/prettier-config",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/lodash": "^4.14.191",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "chai": "^4.3.7",
    "depcheck": "^1.4.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.6",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-ignore-warnings": "^0.2.6",
    "lodash": "^4.17.21",
    "operator-filter-registry": "^1.3.1",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.1",
    "rimraf": "^4.1.1",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "tslog": "^4.7.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  },
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@ethersproject/bytes",
        "@vue/compiler-sfc"
      ]
    }
  },
  "devDependencies": {
    "@solidstate/hardhat-bytecode-exporter": "^1.1.1"
  }
}
